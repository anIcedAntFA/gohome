{
  "editor.formatOnSave": true,

  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },

  "go.useLanguageServer": true, // Bật language server (gopls) để có gợi ý code tốt hơn
  "go.lintTool": "golangci-lint", // Sử dụng golangci-lint làm linter
  "go.lintOnSave": "file", // Chạy linter mỗi khi lưu file
  "gopls": {
	  "formatting.gofumpt": true,
  },
}
